<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:layout_width="285dp"
            android:layout_height="160dp"
            android:id="@+id/button2"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/darker_gray" android:onClick="onClick" tools:text="Beides"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/button5" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.559"
            app:layout_constraintVertical_bias="0.0" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button5" android:text="Beides"/>
    <Button
            android:layout_width="362dp"
            android:layout_height="251dp"
            android:id="@+id/button5"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"
            android:textSize="90sp" android:onClick="onClick1" tools:text="Hin" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:text="Hin"/>
    <Button
            android:layout_width="315dp"
            android:layout_height="116dp"
            android:id="@+id/button"
            android:textSize="70sp"
            android:textColor="@android:color/black" android:backgroundTint="@android:color/white"
            android:onClick="onClick2" tools:text="Zurück"
            app:layout_constraintEnd_toEndOf="@+id/button5" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/button5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button5" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:text="Zurück"/>
</androidx.constraintlayout.widget.ConstraintLayout>